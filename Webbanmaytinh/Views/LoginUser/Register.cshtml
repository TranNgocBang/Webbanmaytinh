@model Webbanmaytinh.Models.AdminUser

@{

    ViewBag.Title = "Đăng ký tài khoản";
}

<div class="cangiua2">
    <div style="width:397px;height:103.6px;padding:30px 22px;color:black;background:#b9b1b1;border-radius:15px;">
        <div class="card-header" style="text-align: center;font-size:30px;">
            Đăng ký tài khoản
        </div>
    </div>
    <div style="width:397px;height:326.8px;padding:12px">
        @using (Html.BeginForm("Register", "LoginUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.TextBoxFor(model => model.ID, "", new { @class = "form-control", @placeholder = "Nhập ID", style = "width: 335px;height:41.6px" })
            @Html.ValidationMessageFor(model => model.ID)

            <div style="height:20px;"></div>
            @Html.PasswordFor(model => model.NameUser, new { @class = "form-control", @placeholder = "Tên đăng nhập" })
            @Html.ValidationMessageFor(model => model.NameUser)

            <div style="height:20px;"></div>
            @Html.PasswordFor(model => model.RoleUser, new { @class = "form-control", @placeholder = "Nhập Role" })
            @Html.ValidationMessageFor(model => model.RoleUser)

            <div style="height:20px;"></div>
            @Html.PasswordFor(model => model.PasswordUser, new { @class = "form-control", @placeholder = "Mật khẩu" })
            @Html.ValidationMessageFor(model => model.ID)

            <div style="height:20px;"></div>
            @Html.PasswordFor(model => model.ConfirmPass, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu" })
            @Html.ValidationMessageFor(model => model.ConfirmPass)
            <div style="height:20px;"></div>
            <input type="submit" name="submit" class="dangnhap" value="Đăng ký" style="width:337px;height:40px" />

        }
        <div style="height:10px;"></div>

    </div>
</div>

